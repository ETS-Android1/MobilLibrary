<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menekse"
    tools:context=".Fragment.Library.Yazar.YazarDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/yimgholder"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ynameholder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/yimgholder"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tarihholder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Açıklama"
            app:layout_constraintBottom_toTopOf="@+id/hayatiholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/yimgholder"
            app:layout_constraintTop_toBottomOf="@+id/ynameholder"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/hayatiholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="hayatı"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yimgholder" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>